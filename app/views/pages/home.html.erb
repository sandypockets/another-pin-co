<section>
  <h2 class="flex justify-center">Featured Pins</h2>
  <div class="flex justify-center">
    <% @featured_products.each do |product| %>
      <div class="flex flex-col mx-6 bg-gray-50 p-5 rounded-md">
        <div class="w-72">
          <%= image_tag product.image_1.url %>
        </div>
        <div class="flex justify-between px-6 pt-3">
          <h3><%= link_to product.title, product_path(product) %></h3>
          <span><%= number_to_currency(product.price / 100) %></span>
        </div>
      </div>
    <% end %>
  </div>
</section>