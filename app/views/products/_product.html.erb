<div class="flex flex-col mx-6 mt-12 bg-gray-50 rounded-md shadow-md transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110">
  <div class="w-30 lg:w-54 p-5">
    <%= link_to product_path(product) do %>
      <%= image_tag product.image_1.url %>
    <% end %>
  </div>
  <div class="flex justify-between px-12 pb-6 w-full">
    <h3><%= link_to product.title, product_path(product) %></h3>
    <span><%= number_to_currency(product.price / 100) %></span>
  </div>
</div>